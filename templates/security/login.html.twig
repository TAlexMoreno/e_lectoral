{% extends 'base.html.twig' %}

{% set sidebar = "no" %}
{% set shortcuts = "no" %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
    <div class="row absolutCenter animationFromTopSlide">
        <div class="col s12 m8 l4">
            <div data-controller="nice-loading-card" class="card">
                <div class="card-content">
                    <span class="card-title">Iniciar sesión</span>
                    <form id="login" action="/login" method="POST" class="row">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="input-field">
                            <i class="material-icons prefix">account_circle</i>
                            <input type="text" id="username" name="username" required>
                            <label for="username">Nombre de usuario</label>
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">password</i>
                            <input type="password" id="password" name="password" required>
                            <label for="password">Contraseña</label>
                        </div>
                    </form>
                </div>
                <div class="card-action right-align">
                    <button type="submit" form="login" class="btn"><i class="material-icons">start</i></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
