{% extends "base.html.twig" %}
{% set sidebar = "yes" %}
{% set shortcuts = "yes" %}

{% block body %}
    <div class="row">
        <div class="col s12">
            <div data-controller="nice-loading-card" class="card">
                <div class="card-content">
                    <span class="card-title">Nuevo usuario</span>
                    <form action="/admin/usuarios/nuevo" id="nuevo" method="POST" class="row">{{form_widget(form)}}</form>
                </div>
                <div class="card-action right-align">
                    <button class="btn" type="submit" form="nuevo"><i class="material-icons">save</i></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}